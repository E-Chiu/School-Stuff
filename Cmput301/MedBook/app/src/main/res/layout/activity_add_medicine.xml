<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMedicineActivity">

    <Button
        android:id="@+id/add_med"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="16dp"
        android:onClick="add"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/cancel_add_med"
        app:layout_constraintTop_toBottomOf="@+id/set_frequency_box" />

    <Button
        android:id="@+id/cancel_add_med"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="219dp"
        android:layout_marginBottom="16dp"
        android:onClick="cancel"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_frequency_box" />

    <TextView
        android:id="@+id/add_new_medicine_text"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="34dp"
        android:text="Add New Medicine"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/set_date_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/set_date_text"
        android:layout_width="60dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Set Date"
        app:layout_constraintBottom_toTopOf="@+id/add_name_text"
        app:layout_constraintEnd_toStartOf="@+id/medDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_new_medicine_text" />

    <CalendarView
        android:id="@+id/medDate"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/set_name_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/set_date_text"
        app:layout_constraintTop_toBottomOf="@+id/add_new_medicine_text" />

    <TextView
        android:id="@+id/add_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="44dp"
        android:text="Name:"
        app:layout_constraintBottom_toTopOf="@+id/add_dose_text"
        app:layout_constraintEnd_toStartOf="@+id/set_name_box"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_date_text" />

    <EditText
        android:id="@+id/set_name_box"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="name of medicine"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/set_dose_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_name_text"
        app:layout_constraintTop_toBottomOf="@+id/medDate" />

    <TextView
        android:id="@+id/add_dose_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:text="Dose:"
        app:layout_constraintBottom_toTopOf="@+id/set_frequency_text"
        app:layout_constraintEnd_toStartOf="@+id/set_dose_box"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_name_text" />

    <EditText
        android:id="@+id/set_dose_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="set dose"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/set_frequency_box"
        app:layout_constraintEnd_toStartOf="@+id/dose_unit_dropdown"
        app:layout_constraintStart_toEndOf="@+id/add_dose_text"
        app:layout_constraintTop_toBottomOf="@+id/set_name_box" />

    <Spinner
        android:id="@+id/dose_unit_dropdown"
        android:layout_width="78dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="left"
        android:padding="5dip"
        app:layout_constraintBottom_toTopOf="@+id/set_frequency_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/set_dose_box"
        app:layout_constraintTop_toBottomOf="@+id/set_name_box"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/set_frequency_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="326dp"
        android:layout_marginBottom="152dp"
        android:text="Frequency:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_dose_text" />

    <EditText
        android:id="@+id/set_frequency_box"
        android:layout_width="267dp"
        android:layout_height="44dp"
        android:layout_marginBottom="76dp"
        android:ems="10"
        android:hint="set frequency"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/add_med"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/set_frequency_text"
        app:layout_constraintTop_toBottomOf="@+id/dose_unit_dropdown" />

</androidx.constraintlayout.widget.ConstraintLayout>